---
import Layout from "../layouts/Layout.astro";

import Card from "../components/_Card.astro";

import Hero from "./frontpage/Hero.astro";
import Swiper from "./frontpage/Swiper.astro";
import Carousel from "./frontpage/Carousel.astro";

import Ticket from "./frontpage/Ticket.astro";
---

<Layout>
  <section
    style="background: rgba(255 255 255 / .8); position: absolute; inset: 0 0 auto auto; margin: auto"
  >
    <ul>
      <li><a href="/">frontpage</a></li>
      <li><a href="/single">single</a></li>
      <li><a href="/page">page</a></li>
      <li><a href="/archive">archive</a></li>
      <li><a href="/404">404</a></li>
      <li><a href="/cheatsheet">cheatsheet</a></li>
    </ul>
  </section>

  <main>
    <Hero />

    <section class="spacing-lg">
      <header class="section-header">
        <h1>
          Exciting Adventures <span class="text-bg-primary">Ahead!</span>
        </h1>
        <p>
          Explore our blockbuster exhibits and showcases, constantly updated to
          make sure your visit to PETROSAINS is a happy adventure for all.
        </p>
      </header>
    </section>

    <section class="spacing-lg py-5 text-center">
      <div class="col-md-4 mx-auto text-bg-primary p-4">
        <h2>Laugh & Play at PETROSAINS KLCC</h2>
        <p>
          Interactive, experiential, and hands-on, Petrosains, The Discovery
          Centre is everything a science centre should be! With exciting
          exhibits and intriguing activities we make learning STEM (science,
          technology, engineering and mathematics) fun while nurturing you to
          further explore science and technology!
        </p>
      </div>
    </section>

    <Carousel>
      <Swiper />
    </Carousel>

    <section class="spacing-lg">
      <header class="section-header">
        <h2>Limited Time Attractions</h2>
        <p>
          Our passion for bringing science to life in many exciting and
          extraordinary ways has, helped us gain both local and international
          recognition, thank you for your continuous support!
        </p>
      </header>
      <div class="container">
        <div class="row row-cols-3">
          <Card
            title="Petrosains Online Learning"
            description="We believe that discovering and learning can take place at any time and anywhere. Our team has put together some unique and fun activities you and your loved ones can do side-by-side. Go on – try it out!"
            imgsrc="/images/PETROSAINS Multi 1-ZH_02611.jpg"
          />
          <Card
            title="Discovery, Now Even Closer to You"
            description="Petrosains brings exciting scientific discovery and inspiring activities closer to you with Petrosains PlaySmart, now at a town near you."
            imgsrc="/images/Sorang Sorang (Ticket)-ZH_01172.jpg"
          />
          <Card
            title="Science As It Should Be"
            description="Learning in the classroom is all well and good, but nothing sparks curiosity, interest and inspiration like truly hands-on scientific discovery – which is exactly what our workshops, shows and activities are here for!"
            imgsrc="/images/PlaySmart Kuantan-ZH_08559.jpg"
          />
        </div>
      </div>
    </section>

    <Ticket />

    <section id="promotion-claim">
      <div class="container">
        <div class="row row-cols-1 row-cols-xl-3">
          <div class="col">
            <h2 class="display-3">Click to buy your tickets today</h2>
          </div>
          <div class="col">
            <div class="card card__promo text-bg-secondary">
              <div class="card-body">
                <h5 class="card-title">
                  Marker Studio Tickets
                  <br />
                  <s>RM5</s>
                  <span class="text-success mx-1">RM3</span>
                </h5>
                <p class="card-text">
                  Buidling blocks and Science, come make your project a reality!
                </p>
              </div>
              <footer class="card-footer">
                <a href="#" class="btn btn-outline-light">Claim Now</a>
              </footer>
            </div>
          </div>
          <div class="col">
            <div class="card card__promo text-bg-primary">
              <div class="card-body">
                <h5 class="card-title">
                  Energy Capsule Tickets
                  <div class="d-block">
                    <s>RM9</s>
                    <span class="text-success mx-1">RM3</span>
                  </div>
                </h5>
                <p class="card-text">
                  Fondly known as the Dark Ride - Experience it today!
                </p>
              </div>
              <footer class="card-footer">
                <a href="#" class="btn btn-outline-light">Claim Now</a>
              </footer>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="spacing-lg">
      <div class="col-lg-9 mx-auto px-4">
        <div class="card mb-3 shadow rounded-0 border-0">
          <div class="row g-0">
            <div class="col-md-6 order-md-2">
              <img
                class="object-fit-cover h-100 aspect-video"
                src="/images/PlaySmart Kuantan-ZH_08552-16x9.jpg"
                alt=""
                width="800"
                height="600"
              />
            </div>
            <div class="col-md-6 order-md-1 d-flex align-items-center">
              <div class="card-body p-5">
                <h2 class="card-title h3">Service Excellence</h2>
                <p class="card-text">
                  Our passion for bringing science to life in many exciting and
                  extraordinary ways has, helped us gain both local and
                  international recognition, thank you for your continuous
                  support!
                </p>
                <a href="#" class="btn btn-outline-primary">View Promotions</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section id="social" class="spacing-lg">
      <header class="section-header">
        <h2>PETROSAINS in the wild</h2>
        <p>
          Let’s be friends! Connect with us on our instagram and submit your
          best selfie yet.
        </p>
      </header>

      <div class="container popup-gallery">
        <div class="row row-cols-2 row-cols-md-4 g-3">
          <a href="/images/Maker Studio-ZH_02051.jpg">
            <img src="/images/Maker Studio-ZH_02051.jpg" />
          </a>
          <a href="/images/Maker Studio-ZH_02108.jpg">
            <img src="/images/Maker Studio-ZH_02108.jpg" />
          </a>
          <a href="/images/Sorang Sorang (Ticket)-ZH_01153.jpg">
            <img src="/images/Sorang Sorang (Ticket)-ZH_01153.jpg" />
          </a>
          <a href="/images/Sorang Sorang (Ticket)-ZH_01185.jpg">
            <img src="/images/Sorang Sorang (Ticket)-ZH_01185.jpg" />
          </a>
          <a href="/images/Sorang Sorang (Ticket)-ZH_01325.jpg">
            <img src="/images/Sorang Sorang (Ticket)-ZH_01325.jpg" />
          </a>
          <a href="/images/Depan Sparkz-ZH_01803.jpg">
            <img src="/images/Depan Sparkz-ZH_01803.jpg" />
          </a>
          <a href="/images/Maker Studio-ZH_02006.jpg">
            <img src="/images/Maker Studio-ZH_02006.jpg" />
          </a>
          <a href="/images/playsmart_2017-201711181153-2high.jpg">
            <img src="/images/playsmart_2017-201711181153-2high.jpg" />
          </a>
        </div>
      </div>
    </section>

    <section id="cta" class="spacing-lg">
      <div class="container">
        <div class="row row-cols-1 row-cols-lg-2 g-0">
          <div class="col">
            <div class="card card-cta text-bg-dark border-0 aspect-video">
              <img
                width="400"
                height="300"
                src="/images/playsmart_2017-201711171351-14high.jpg"
                class="card-img object-fit-cover h-100"
              />
              <img class="card-blob" src="/petrosains/blob-card.svg" />
              <div
                class="card-img-overlay d-flex flex-column justify-content-end align-items-start"
              >
                <h3 class="card-title">Beyond Petrosains at Suria KLCC</h3>
                <p class="card-text">
                  This is a wider card with supporting text below as a natural
                  lead-in to additional content. This content is a little bit
                  longer.
                </p>
                <a href="#" class="btn btn-outline-light">Find Out More</a>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="card card-cta text-bg-dark border-0 aspect-video">
              <img
                width="400"
                height="300"
                src="/images/playsmart_2017-201711180931-17high.jpg"
                class="card-img object-fit-cover h-100"
              />
              <img class="card-blob" src="/petrosains/blob-card-purple.svg" />
              <div
                class="card-img-overlay d-flex flex-column justify-content-end align-items-start"
              >
                <h3 class="card-title">Bringing a slice of science home</h3>
                <p class="card-text">
                  This is a wider card with supporting text below as a natural
                  lead-in to additional content. This content is a little bit
                  longer.
                </p>
                <a href="#" class="btn btn-outline-light">Find Out More</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style lang="scss" is:global>
  img {
    max-width: 100%;
    height: auto;
  }
  .lead {
    font-size: 22px;
    text-wrap: balance;
  }

  .section-header {
    text-align: center;
    padding-inline: 1rem;
    h1 {
      font-size: clamp(2.2rem, 5vw, 5rem);
    }
    h2,
    h3 {
      font-size: clamp(2rem, 5vw, 4rem);
    }
    p {
      font-size: clamp(1rem, 2vw, 1.25rem);
      max-width: 800px;
      margin: 0 auto 3rem auto;
    }
  }

  .card.card__promo {
    border: 0;
    height: 100%;
    border-radius: 0;

    .card-title {
      font-size: clamp(2rem, 5vw, 3rem);
    }
    .card-text {
      font-size: clamp(1rem, 2vw, 1.5rem);
    }
    .card-footer {
      border: 0;
      background: transparent;
      padding-bottom: 1rem;
    }
  }

  .popup-gallery img {
    object-fit: cover;
    width: 100%;
    aspect-ratio: 1/1;
  }
</style>
